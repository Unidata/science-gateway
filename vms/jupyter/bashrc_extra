

# add globus to path
GLOBUSCONNECTPERSONAL=$(ls /srv/jupyterhub/ | grep globusconnectpersonal)
PATH=/srv/jupyterhub/$GLOBUSCONNECTPERSONAL:$PATH

# https://conda.io/docs/user-guide/configuration/use-condarc.html#specify-environment-directories-envs-dirs
CONDA_ENVS_PATH=/notebooks/$USER/my-envs:/opt/anaconda/envs

# cd to notebook directory upon login
cd /notebooks/$USER
